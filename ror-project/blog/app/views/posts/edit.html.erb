<div class="page-header">
    <h1 class="page-title">Edit Post</h1>
    <%= link_to 'Back', posts_path %>
</div>

<div class="page-body">
    <div class="page-content">
        <% if @post.errors.any? %>
            <div class="page-content-error">
                <%= pluralize(@post.errors.count, "error") %> prohibited this article from being saved:
            </div>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        <% end %>  
        
        <!-- TIP：如果你要連到的 action 都在同一個 controller 下，你無需指定 :controller 選項，因為 Rails 預設的情況下會使用當前的 controller -->
        <%= form_for :post, url: post_path, method: :patch do |f| %>
            <p>
                <%= f.label :title %><br>
                <%= f.text_field :title %>
            </p>
            <p>
                <%= f.label :text %><br>
                <%= f.text_area :text %>
            </p>
            <p>
                <%= f.submit %>
            </p>
        <% end %>  
    </div>
</div>



